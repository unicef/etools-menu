{
  "entrypoint": "index.html",
  "shell": "src/app-shell.js",
  "sources": ["src/**/*", "images/**/*", "package.json"],
  "lint": {
    "rules": ["polymer-3"],
    "ignoreWarnings": ["could-not-resolve-reference", "non-literal-import"]
  },
  "extraDependencies": ["manifest.json"],
  "builds": [
    {
      "name": "esm-bundled",
      "browserCapabilities": ["es2015", "modules"],
      "js": {
        "minify": true
      },
      "css": {
        "minify": true
      },
      "html": {
        "minify": true
      },
      "bundle": true,
      "addServiceWorker": true
    },
    {
      "name": "es6-bundled",
      "preset": "es6-bundled",
      "addServiceWorker": true
    }
  ],
  "moduleResolution": "node",
  "npm": true
}
